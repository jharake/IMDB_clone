<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MMDb</title>
</head>
<style>
    body {
        height: 100vh;
        width: 100vw;
        background-color: black;
        margin: 0;
        overflow: hidden;
    }

    #image-carousel {
        width: 50%;
        height: 35%;
        top: 0;
        left: 0;
        padding: 10px;
        margin-right: 0;
    }

    #image-track {
        display: flex;
        gap: 4vmin;
        position: absolute;
        left:25%;
        width:fit-content;
        transform: translate(0, -90%);
        user-select: none; /* -- Prevent image highlighting -- */
    }

    #image-track > .image {
        width: 20vmin;
        height: 50vmin;
        object-fit: cover;
        object-position: 100% center;
    }

   a > .image {
        width: 100%;
        height: auto;
        object-fit: cover;
        object-position: 100% center;
    }

    /* -- YouTube Link Styles -- */

    body.menu-toggled > .meta-link > span {
        color: rgb(30, 30, 30);
    }

    #source-link {
        bottom: 60px;
    }

    #source-link > i {
        color: rgb(94, 106, 210);
    }

    #yt-link > i {
        color: rgb(239, 83, 80);
    }

    .meta-link {
        align-items: center;
        backdrop-filter: blur(3px);
        background-color: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 6px;
        bottom: 10px;
        box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        display: inline-flex;
        gap: 5px;
        left: 10px;
        padding: 10px 20px;
        position: fixed;
        text-decoration: none;
        transition: background-color 400ms, border-color 400ms;
        z-index: 10000;
    }

    .meta-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .meta-link > i, .meta-link > span {
        height: 20px;
        line-height: 20px;
    }

    .meta-link > span {
        color: white;
        font-family: "Rubik", sans-serif;
        font-weight: 500;
    }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
    /* -- Had to add extra lines for touch events -- */
    $(window).on("load", () => {
        let car = $("#image-carousel");
        const track = $("#image-track");

        track.on("mousedown", (e) => {
            track.data("positionX", e.clientX)
        });


        track.on("mouseup", () => {
            track.data("positionX", "0");
            track.data("prevPercentage", track.data("percentage"))
        });


        track.on("mousemove", e => {
            if (track.data("positionX") === "0") return;

            const mouseDelta = parseFloat(track.data("positionX")) - e.clientX;
            const maxDelta = $(window).width() / 2;

            const percentage = (mouseDelta / maxDelta) * -30;
            const nextPercentageUnconstrained = parseFloat(track.data("prevPercentage")) + percentage;
            const nextPercentage = Math.max(Math.min(nextPercentageUnconstrained, 0), -100);

            track.data("percentage", nextPercentage);

            const trackHTML = document.getElementById("image-track")
            trackHTML.animate(
                {
                    transform: `translate(${nextPercentage}%, -90%)`
                },
                { duration: 1200, fill: "forwards" }
            );

            for (const image of trackHTML.getElementsByClassName("image")) {
                image.animate(
                    {
                        objectPosition: `${100 + nextPercentage}% 50%`

                    },
                    { duration: 600, fill: "forwards" }
                );
            }

        });

        // $(window).on("touchstart", e => handleOnDown(e.touches[0]));
        // $(window).on("touchend", e => handleOnUp(e.touches[0]));
        // $(window).on("touchmove", e => handleOnMove(e.touches[0]));
    });
    let top5Movies = []

    console.log(top5Movies)
</script>
<body>
<div id="image-carousel"></div>
<div id="image-track" data-positionX="0" data-prev-percentage="0">
    <%for (let i = 0; i < 5; i++) {%>
    <a href="/movies/<%= Movies.top5Movies[i].id%>" draggable="false"><img class = "image" src = "/posters/<%= (Movies.top5Movies[i].id)%>.jpg" alt="<%= Movies.top5Movies[i].original_title%>" draggable="false"></a>
    <%}%>
</div>
</body>
</html>